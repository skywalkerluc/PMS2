@model SchoolManagement.MVC.ViewModels.AnoLetivoViewModel

@{
    ViewBag.Title = "AnoLetivo";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Ano Letivo
            <small>Cadastro de Ano Letivo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Ano Letivo</li>
            <li class="active">Cadastro de Ano Letivo</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastro</h3>
                    </div><!-- /.box-header -->
                    @using (Html.BeginForm("Create", "AnoLetivo", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            @Html.ValidationSummary(true)
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.QntUnidades)
                                @Html.EditorFor(m => m.QntUnidades, new { @placeholder = "Unidades", @id = "nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.QntUnidades)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Ano)
                                @Html.EditorFor(m => m.Ano, new { @placeholder = "Ano", @id = "nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Ano)
                            </div>

                            <div class="modal-dialog" style="visibility:hidden">
                                <div class="modal-title">
                                    @ViewBag.TituloMensagem
                                </div>
                                <div class="modal-body">
                                    @ViewBag.MensagemErro
                                </div>
                            </div>


                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>

                    }
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->