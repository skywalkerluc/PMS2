@model SchoolManagement.MVC.ViewModels.TurmaViewModel

@{
    ViewBag.Title = "DetalhesTurmaProfessorLeciona";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Professor
            <small>Visualizar Alunos Professores</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Professor</li>
            <li class="active">Visualizar Alunos Professores</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Visualizar Alunos Professores</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <div>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.AnoLetivo.Ano)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.AnoLetivo.Ano)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Descricao)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.HorariosTurmaId)
                                </dt>

                                @{
                                    string resultado = RecuperarValorHorarioTurma(Model.HorariosTurmaId);
                                }

                                <dd>
                                    @Html.DisplayName(resultado)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Vagas)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Vagas)
                                </dd>

                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Voltar", "VisualizarTurmasProfessorLeciona", "Professor")
                        </p>
                    </div><!-- /.box-body -->
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@functions{
    public string RecuperarValorHorarioTurma(int value)
    {
        string descricaoRetorno = string.Empty;
        switch (value)
        {
            case 1:
                descricaoRetorno = "Manhã";
                break;
            case 2:
                descricaoRetorno = "Tarde";
                break;
            case 3:
                descricaoRetorno = "Noite";
                break;
            default:
                descricaoRetorno = string.Empty;
                break;
        }
        return descricaoRetorno;
    }
}
