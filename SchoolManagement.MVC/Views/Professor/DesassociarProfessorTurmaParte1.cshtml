@model SchoolManagement.MVC.ViewModels.ProfessorViewModel
<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Professor
            <small> Professor filtro</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Professor</a></li>
            <li class="active">Desassociar Professor a turma</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="example-modal">
            <div class="modal">
                <div class="modal-dialog">
                    @using (Html.BeginForm("RemoverProfessorTurma", "Professor", FormMethod.Post))
                    {
                        <form action="consultarresponsavel.html">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Filtro para consulta de Alunos</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Nome)
                                        @{
                        List<SelectListItem> listaProfessores = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaProfessores)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaProfessores.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.professorSelecionado, listaProfessores, new { @class = "form-control select2", placeholder = "Selecione uma aluno", style = "width: 100%;", id = "aluno" })
                                        }
                                        @Html.ValidationMessageFor(model => model.Nome)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Turmas)
                                        @{
                        List<SelectListItem> listaTurma = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaTurmas)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaTurma.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.turmaSelecionada, listaTurma, new { @class = "form-control select2", placeholder = "Selecione uma aluno", style = "width: 100%;", id = "aluno" })
                                        }
                                        @Html.ValidationMessageFor(model => model.Turmas)
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Associar</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </form>

                    }
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div><!-- /.example-modal -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->