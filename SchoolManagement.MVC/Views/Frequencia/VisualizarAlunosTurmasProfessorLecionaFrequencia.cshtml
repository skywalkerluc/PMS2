@model IEnumerable<SchoolManagement.MVC.ViewModels.FrequenciaViewModel>

@{
    ViewBag.Title = "Visualizar Alunos Professor";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Notas
            <small>Lançar notas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Notas</a></li>
            <li class="active">Lançar notas</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Lançar Notas</h3>
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <div class="input-group-btn">
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        @using (Html.BeginForm("LancarFrequenciaAluno", "ResultadosProvas", FormMethod.Post))
                        {
                            <table class="table table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Aluno.Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Presente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataReferencia)
                                    </th>
                                    <th></th>
                                </tr>

                                @{var cont = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-group col-md-6">
                                                @Html.DisplayFor(m => item.Aluno.Nome, new { id = "nomeAluno" })
                                                @Html.HiddenFor(m => item.Aluno.Id)
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-group">
                                                @{
                                    List<SelectListItem> listaTipoFrequencia = new List<SelectListItem>();
                                    foreach (var item2 in @ViewBag.ListaTiposDeFrequencia)
                                    {
                                        SelectListItem selec = new SelectListItem()
                                        {
                                            Value = item2.Value,
                                            Text = item2.Text
                                        };
                                        listaTipoFrequencia.Add(selec);
                                    }
                                    @Html.DropDownListFor(m => item.resul, listaTipoFrequencia, new { @class = "form-control select2", placeholder = "Selecione uma aluno", style = "width: 100%;", id = "resultadoAluno" + "[" + cont + "]" })
                                                }
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => item.DataReferencia, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => item.DataReferencia, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>

                                        </td>
                                    </tr>
                                    cont++;
                                }
                            </table>
                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Lançar notas</button>
                            </div>
                        }
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

<script>
    $("#resultadoAluno").change(function ()
    {
        var val = $('#resultadoAluno').val();
        console.log(val);
    });
</script>