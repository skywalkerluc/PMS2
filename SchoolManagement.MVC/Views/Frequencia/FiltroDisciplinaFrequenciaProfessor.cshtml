@model SchoolManagement.MVC.ViewModels.DisciplinaViewModel

@{
    ViewBag.Title = "Filtro Turmas Professor Leciona";
}

<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Caderneta
            <small>Disciplinas que Leciono</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Caderneta</a></li>
            <li class="active">Disciplinas que Leciono</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="example-modal">
            <div class="modal">
                <div class="modal-dialog">
                    @using (Html.BeginForm("VisualizarAlunosTurmasProfessorLecionaFrequencia", "Frequencia", FormMethod.Get))
                    {
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Filtro Disciplinas que Leciono</h4>
                            </div>
                            <div class="modal-body">

                                <div class="form-group col-md-12">
                                    @Html.LabelFor(m => m.NomeDisciplina)

                                    @{
                        List<SelectListItem> listaDisciplinaFrequencia = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaDisciplinaFrequencia)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaDisciplinaFrequencia.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.DisciplinaId, listaDisciplinaFrequencia, new { @class = "form-control", placeholder = "Selecione uma Turma", style = "width: 100%;", id = "turmas" })
                                    }

                                    @Html.ValidationMessageFor(model => model.NomeDisciplina)
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Avançar</button>
                            </div>
                        </div><!-- /.modal-content -->
                    }
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div><!-- /.example-modal -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
