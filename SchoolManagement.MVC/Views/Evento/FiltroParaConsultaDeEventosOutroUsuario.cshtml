@model SchoolManagement.MVC.ViewModels.EventoViewModel

@{
    ViewBag.Title = "Filtro - Eventos";
}

<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Evento
            <small>Consultar Evento</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Evento</a></li>
            <li class="active">Consultar Evento</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="example-modal">
            <div class="modal">
                <div class="modal-dialog">
                    @using (Html.BeginForm("RecuperarEventoPorDescricaoOutroUsuario", "Evento", FormMethod.Post))
                    {
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Filtro para consulta de Eventos</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Descricao)

                                    @{
                        List<SelectListItem> listaEventos = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaEventos)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaEventos.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.eventoEscolhido, listaEventos, new { @class = "form-control select2", placeholder = "Selecione as Disciplinas", style = "width: 100%;", id = "Disciplinas" })
                                    }

                                    @Html.ValidationMessageFor(model => model.Descricao)
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Filtrar</button>
                            </div>
                        </div><!-- /.modal-content -->
                    }
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div><!-- /.example-modal -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
