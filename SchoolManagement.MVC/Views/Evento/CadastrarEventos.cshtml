@model SchoolManagement.MVC.ViewModels.EventoViewModel

@{
    ViewBag.Title = "Criar - Evento";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Eventos
            <small>Cadastro de Eventos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Eventos</li>
            <li class="active">Cadastro de Eventos</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            @using (Html.BeginForm("Create", "Evento", FormMethod.Post))
            {
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">Cadastro</h3>

                        </div><!-- /.box-header -->

                        <div class="box-body">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <!-- textarea -->
                            <div class="form-group col-md-12">
                                @Html.LabelFor(m => m.Descricao)
                                @Html.TextAreaFor(m => m.Descricao, new { @placeholder = "Descricao", @id = "Descricao", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Descricao)
                            </div>


                            <!-- Date dd/mm/yyyy -->
                            <div class="form-group col-md-6">
                             @Html.LabelFor(m => m.DataEvento)

                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.TextBoxFor(m => m.DataEvento, new { @id = "data", @onKeyPress = "formata_data(this,document.form.cpf);return Apenas_Numeros(event);", @size = "11", @maxlength = "11", @placeholder = "Data de nascimento", @class = "form-control timepicker" })
                                    @Html.ValidationMessageFor(model => model.DataEvento)
                                </div><!-- /.input group -->
                            </div><!-- /.form group -->

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.FuncionarioResponsavel)

                                 @{
                                    List<SelectListItem> listaProfessores = new List<SelectListItem>();
                                    foreach (var item in @ViewBag.ListaProfessores)
                                    {
                                        SelectListItem selec = new SelectListItem()
                                        {
                                            Value = item.Value,
                                            Text = item.Text
                                        };
                                        listaProfessores.Add(selec);
                                    }
                                    @Html.DropDownListFor(m => m.funcionariocomboselected, listaProfessores, new { @class = "form-control", placeholder = "Selecione o Professor", style = "width: 100%;", id = "professor" })
                                  }

                                @Html.ValidationMessageFor(model => model.FuncionarioResponsavel)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Local)
                                @Html.TextBoxFor(m => m.Local, new { @placeholder = "Local", @id = "Local", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Local)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.PrecoEvento)
                                <input type="number" class="form-control" placeholder="Preco">
                                @Html.ValidationMessageFor(model => model.PrecoEvento)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.NecessidadeAprovacao)
                                <select class="form-control">
                                    <option></option>
                                    <option value="true">SIM</option>
                                    <option value="false">NAO</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.NecessidadeAprovacao)
                            </div>

                            <div class="form-group col-md-6">
                                <label>Necessidade de Acompanhante</label>
                                <select class="form-control">
                                    <option></option>
                                    <option>SIM</option>
                                    <option>NAO</option>
                                </select>
                            </div>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                            </div>
                        </div>

                    </div><!-- /.box-body -->

                </div>

            }
        </div><!--/.col (left) -->
    </section><!-- /.content -->
</div>   <!-- /.row -->
<!-- Select2 -->
<script src="~/Content/plugins/select2/select2.full.min.js"></script>
<!-- InputMask -->
<script src="~/Content/plugins/input-mask/jquery.inputmask.js"></script>
<script src="~/Content/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
<script src="~/Content/plugins/input-mask/jquery.inputmask.extensions.js"></script>
<script src="~/Content/util/util.js"></script>
<script src="~/Content/bootstrap/jquery_ui_min.js"></script>
<script src="~/Content/bootstrap/raphael-min.js"></script>

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery-1.11.3.min.js"></script>
