@model IEnumerable<SchoolManagement.MVC.ViewModels.AlunoViewModel>

@{
    ViewBag.Title = "Visualizar Alunos Professor";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Professor
            <small>Visualizar Alunos Professores</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Professor</li>
            <li class="active">Visualizar Alunos Professores</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Visualizar Alunos Professores</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        @using (Html.BeginForm("LancarNotasTurma", "ResultadosProvas", FormMethod.Post))
                        {
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Observacoes)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.LabelFor(modelItem => item.Nome)
                                            @Html.TextBoxFor(modelItem => item.Nome, new { @placeholder = "nome", @id = "nome", @class = "form-control" })
                                            @Html.ValidationMessageFor(modelItem => item.Nome)
                                        </td>
                                    </tr>
                                }
                            </table>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                            </div>
                        }
                    </div><!-- /.box-body -->
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
