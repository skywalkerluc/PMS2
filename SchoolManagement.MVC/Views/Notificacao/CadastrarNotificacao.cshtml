@model SchoolManagement.MVC.ViewModels.NotificacaoViewModel

@{
    ViewBag.Title = "Criar - Notificação";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Noificação
            <small>Cadastro de Notificações</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Notificações</li>
            <li class="active">Cadastro de Notificações</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            @using (Html.BeginForm("Create", "Notificacao", FormMethod.Post))
            {
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header with-border">
                            <h3 class="box-title">Cadastro</h3>

                        </div><!-- /.box-header -->

                        <div class="box-body">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Assunto)
                                @Html.TextBoxFor(m => m.Assunto, new { @placeholder = "Assunto", @id = "assunto", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Assunto)
                            </div>


                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.ListaTurmas)

                                @{
                                    List<SelectListItem> listaTurmas = new List<SelectListItem>();
                                    foreach (var item in @ViewBag.ListaTurmas)
                                    {
                                        SelectListItem selec = new SelectListItem()
                                        {
                                            Value = item.Value,
                                            Text = item.Text
                                        };
                                        listaTurmas.Add(selec);
                                    }
                                    @Html.DropDownListFor(m => m.turmaEscolhida, listaTurmas, new { @class = "form-control", placeholder = "Selecione uma Turma", style = "width: 100%;", id = "turmas" })
                                }

                                @Html.ValidationMessageFor(model => model.ListaTurmas)
                            </div>

                            <!-- textarea -->
                            <div class="form-group col-md-12">
                                @Html.LabelFor(m => m.Descricao)
                                @Html.TextAreaFor(m => m.Descricao, new { @placeholder = "Descricao", @id = "Descricao", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Descricao)
                            </div>

                        </div>
                        <div class="box-footer", style="margin-left:14px">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>

                    </div><!-- /.box-body -->

                </div>
            }
        </div><!--/.col (left) -->
    </section><!-- /.content -->
</div>   <!-- /.row -->
<!-- Select2 -->
<script src="~/Content/plugins/select2/select2.full.min.js"></script>
<!-- InputMask -->
<script src="~/Content/plugins/input-mask/jquery.inputmask.js"></script>
<script src="~/Content/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
<script src="~/Content/plugins/input-mask/jquery.inputmask.extensions.js"></script>
<script src="~/Content/util/util.js"></script>
<script src="~/Content/bootstrap/jquery_ui_min.js"></script>
<script src="~/Content/bootstrap/raphael-min.js"></script>

