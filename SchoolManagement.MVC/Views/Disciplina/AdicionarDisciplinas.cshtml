@model SchoolManagement.MVC.ViewModels.DisciplinaViewModel

@{
    ViewBag.Title = "Adicionar - Disciplina";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Disciplina
            <small>Cadastro de Disciplina</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Disciplina</li>
            <li class="active">Cadastro de Disciplina</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastro</h3>
                    </div><!-- /.box-header -->
                    @using (Html.BeginForm("Create", "Disciplina", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            @Html.ValidationSummary(true)
                            @Html.ValidationSummary(true)
                            <!-- nome -->
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.NomeDisciplina)
                                @Html.TextBoxFor(m => m.NomeDisciplina, new { @placeholder = "Nome Disciplina", @id = "nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NomeDisciplina)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Livros)
                                @{
                        List<SelectListItem> listaLivros = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaLivro)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaLivros.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.livrosSelecionados, listaLivros, new { @class = "form-control select2", placeholder = "Selecione um livro", style = "width: 100%;", id = "livro" })
                                }
                                @Html.ValidationMessageFor(model => model.Livros)
                            </div>

                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>
                    }
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
<script src="~/Content/plugins/select2/select2.full.min.js"></script>
<script>
    $(function () {
        $(".select2").select2();
    });
</script>