@model SchoolManagement.MVC.ViewModels.FiltroViewModel.FiltroResponsavel
<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Responsavel
            <small>Consultar Responsaveis filtro</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Responsavel</a></li>
            <li class="active">Consultar Responsaveis</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="example-modal">
            <div class="modal">
                <div class="modal-dialog">
                    @using (Html.BeginForm("RecuperarResponsavelPorNome", "Responsavel", FormMethod.Post))
                    {
                        <form action="consultarresponsavel.html">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Filtro para consulta de Responsavel</h4>
                                </div>
                                <div class="modal-body">
                                    <!-- nome -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.NomeResponsavel)
                                        @Html.TextBoxFor(m => m.NomeResponsavel, new { @placeholder = "Nome responsável", @id = "nomeResponsavel", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.NomeResponsavel)
                                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Alunos)
                                        @{
                                            List<SelectListItem> listaAlunos = new List<SelectListItem>();
                                            foreach (var item in @ViewBag.ListaAlunos)
                                            {
                                                SelectListItem selec = new SelectListItem()
                                                {
                                                    Value = item.Value,
                                                    Text = item.Text
                                                };
                                                listaAlunos.Add(selec);
                                            }
                                            @Html.DropDownListFor(m => m.alunoSelecionada, listaAlunos, new { @class = "form-control select2", placeholder = "Selecione uma aluno", style = "width: 100%;", id = "aluno" })
                                        }
                                        @Html.ValidationMessageFor(model => model.Alunos)
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Filtrar</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </form>

                    }
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div><!-- /.example-modal -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->