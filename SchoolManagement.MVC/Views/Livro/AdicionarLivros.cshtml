@model SchoolManagement.MVC.ViewModels.LivroViewModel

@{
    ViewBag.Title = "Adicionar - Material";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Material
            <small>Cadastro de Material</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Material</li>
            <li class="active">Cadastro de Material</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cadastro</h3>
                    </div><!-- /.box-header -->
                    @using (Html.BeginForm("Create", "Livro", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">

                            @Html.ValidationSummary(true)
                            <!-- nome -->
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.NomeLivro)
                                @Html.TextBoxFor(m => m.NomeLivro, new { @placeholder = "Nome", @id = "nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NomeLivro)
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Autor)
                                @Html.TextBoxFor(m => m.Autor, new { @placeholder = "Autor", @id = "nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Autor)
                            </div>

                            <div class="form-group col-md-12">
                                @Html.LabelFor(m => m.Editora)
                                @Html.TextBoxFor(m => m.Editora, new { @placeholder = "Editora", @id = "nome", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Editora)
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>

                    }

                </div><!--/.col (left) -->
                <!-- right column -->
            </div>   <!-- /.row -->
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->