@model IEnumerable<SchoolManagement.MVC.ViewModels.LivroViewModel>

@{
    ViewBag.Title = "Resultado de filtro - Materiais";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Material
            <small>Resultado de filtro - Materiais</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Material</li>
            <li class="active">Resultado de filtro - Materiais</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Resultado de filtro - Materiais</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NomeLivro)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Autor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Editora)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomeLivro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Autor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Editora)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.LivroId }) |
                                        @Html.ActionLink("Detalhes", "Details", new { id = item.LivroId }) |
                                        @Html.ActionLink("Deletar", "Delete", new { id = item.LivroId })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div><!-- /.box-body -->
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->