@model IEnumerable<SchoolManagement.MVC.ViewModels.ProvaViewModel>

@{
    ViewBag.Title = "VisualizarProvasTurma";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Provas
            <small>Visualizar Provas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Provas</li>
            <li class="active">Visualizar Provas</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Disciplinas</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataProva)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Unidade)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.disciplinasTeste)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.professoresLista)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tipo)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataProva)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Unidade)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.disciplinasTeste)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.professoresLista)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tipo)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalhes", "DetalhesProvaSelecionadaResponsavel", new { id = item.ProvaId })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div><!-- /.box-body -->
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->