@model SchoolManagement.MVC.ViewModels.UsuarioViewModel
<link rel="stylesheet" href="Content/login/css/login.css">
<script src="Content/login/js/login.js"></script>
<script src="~/Content/util/util.js"></script>
<script src="~/Content/modal/js/modalBlocoNotas.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
@{
    ViewBag.Title = "Login";
}
<div id="fullscreen_bg" class="fullscreen_bg" />
<div class="container ">
    @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        <img src="~/Content/imagens/LogoPMS.png" />
        <hr />

        @Html.TextBoxFor(m => m.UserLogin, new { @class = "form-control", @placeholder = "Login", @required = "", @autofocus = "" })
        @Html.ValidationMessageFor(m => m.UserLogin)

        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Senha", @required = "" })
        @Html.ValidationMessageFor(m => m.Senha)
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Entrar
        </button>
    }
</div>

@if (@ViewBag.AlertMessage != null)
{
    <script>
        $(function () {
            $("#dialog").dialog({
                height: 200,
                modal: true,
                buttons: {
                    Ok: function () {
                        $(this).dialog("close");
                    }
                }
            });
        });
    </script>
}
