@model SchoolManagement.MVC.ViewModels.FiltroViewModel.FiltroTurma

@{
    ViewBag.Title = "Consultar Turmas";
}

<h2>Consultar Turmas</h2>


<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Turmas
            <small>Consultar Turmas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Turmas</a></li>
            <li class="active">Consultar Turmas</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="example-modal">
            <div class="modal">
                <div class="modal-dialog">
                    @using (Html.BeginForm("FiltrarTurma", "Turma", FormMethod.Post))
                    {
                        <form action="consultarturrmas.html">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Filtro para consulta de Turmas</h4>
                                </div>
                                <div class="modal-body">
                                    <!-- nome -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DescricaoTurma)
                                        @Html.TextBoxFor(m => m.DescricaoTurma, new { @placeholder = "Descricao", @id = "descricaoTurma", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DescricaoTurma)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Professor)
                                        @{
                                            List<SelectListItem> listaProfessores = new List<SelectListItem>();
                                            foreach (var item in @ViewBag.ListaProfessores)
                                            {
                                                SelectListItem selec = new SelectListItem()
                                                {
                                                    Value = item.Value,
                                                    Text = item.Text
                                                };
                                                listaProfessores.Add(selec);
                                            }
                                            @Html.DropDownListFor(m => m.Professor, listaProfessores, new { @class = "form-control", placeholder = "Selecione uma professor", style = "width: 100%;", id = "professor" })
                                        }
                                        @Html.ValidationMessageFor(model => model.Professor)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.AnoLetivo)
                                        @{
                                            List<SelectListItem> listaAnoLetivos = new List<SelectListItem>();
                                            foreach (var item in @ViewBag.ListaAnoLetivos)
                                            {
                                                SelectListItem selec = new SelectListItem()
                                                {
                                                    Value = item.Value,
                                                    Text = item.Text
                                                };
                                                listaAnoLetivos.Add(selec);
                                            }
                                            @Html.DropDownListFor(m => m.AnoLetivo, listaAnoLetivos, new { @class = "form-control", placeholder = "Selecione uma ano letivo", style = "width: 100%;", id = "anoLetivo" })
                                        }
                                        @Html.ValidationMessageFor(model => model.AnoLetivo)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.HorarioId)
                                        @Html.TextBoxFor(m => m.HorarioId, new { @placeholder = "Horário", @id = "HorarioId", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.HorarioId)
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Filtrar</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </form>
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div><!-- /.example-modal -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->


    <!-- jQuery 2.1.4 -->
                                            <script src="../estilo/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
                                            <script src="../estilo/bootstrap/js/bootstrap.min.js"></script>
    <!-- FastClick -->
                                            <script src="../estilo/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE App -->
                                            <script src="../estilo/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
                                            <script src="../estilo/dist/js/demo.js"></script>
