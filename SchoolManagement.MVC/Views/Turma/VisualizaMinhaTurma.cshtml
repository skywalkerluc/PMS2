@model  SchoolManagement.MVC.ViewModels.TurmaViewModel

@{
    ViewBag.Title = "VisualizaMinhaTurma";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Turma
            <small>Visualizar Minha Turma</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Turma</li>
            <li class="active">Visualizar Minha Turma</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HorariosTurmaId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vagas)
                                </th>
                                
                                <th></th>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Descricao)
                                </td>
                                    @{
                                        var valor = Model.HorariosTurmaId;
                                        string resultado = RecuperarValorHorarioTurma(valor);
                                    }      
                                <td>
                                    @*@Html.HiddenFor(modelItem => item.HorariosTurmaId)*@
                                    @*@Html.DisplayFor(RecuperarValorHorarioTurma())*@
                                    @Html.DisplayName(resultado)
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Vagas)
                                </td>
                                <td>
                                    @Html.ActionLink("Detalhes", "DetalhesMinhaTurma", new { id = Model.TurmaId })
                                </td>
                            </tr>

                        </table>
                    </div><!-- /.box-body -->
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

@functions{
    public string RecuperarValorHorarioTurma(int value)
    {
        string descricaoRetorno = string.Empty;
        switch (value)
        {
            case 1:
                descricaoRetorno = "Manhã";
                break;
            case 2:
                descricaoRetorno = "Tarde";
                break;
            case 3:
                descricaoRetorno = "Noite";
                break;
            default:
                descricaoRetorno = string.Empty;
                break;
        }
        return descricaoRetorno;
    }
}
