@model SchoolManagement.MVC.ViewModels.FiltroViewModel.FiltroTurma

@{
    ViewBag.Title = "Filtro - Turma";
}
<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Turma
            <small>Filtro - Turma</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Turma</a></li>
            <li class="active">Filtro - Turma</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="example-modal">
            <div class="modal">
                <div class="modal-dialog">
                    @using (Html.BeginForm("FiltrarTurma", "Turma", FormMethod.Post))
                    {
                        <form action="consultarturrmas.html">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Filtro para consulta de Turmas</h4>
                                </div>
                                <div class="modal-body">
                                    <!-- nome -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DescricaoTurma)
                                        @Html.TextBoxFor(m => m.DescricaoTurma, new { @placeholder = "Descricao", @id = "descricao", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DescricaoTurma)
                                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Professor)
                                        @{
                        List<SelectListItem> listaProfessores = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaProfessores)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaProfessores.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.professorSelecionado, listaProfessores, new { @class = "form-control select2", placeholder = "Selecione uma professor", style = "width: 100%;", id = "professor" })
                                        }
                                        @Html.ValidationMessageFor(model => model.Professor)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.AnoLetivo)
                                        @{
                        List<SelectListItem> listaAnoLetivo = new List<SelectListItem>();
                        foreach (var item in @ViewBag.ListaAnoLetivo)
                        {
                            SelectListItem selec = new SelectListItem()
                            {
                                Value = item.Value,
                                Text = item.Text
                            };
                            listaAnoLetivo.Add(selec);
                        }
                        @Html.DropDownListFor(m => m.anoLetivoSelecionado, listaAnoLetivo, new { @class = "form-control select2", placeholder = "Selecione uma ano letivo", style = "width: 100%;", id = "anoLetivo" })
                                        }
                                        @Html.ValidationMessageFor(model => model.AnoLetivo)
                                    </div>

                                    <div class="form-group">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.HorarioId)
                                            @{
                        List<SelectListItem> listaHorarios = new List<SelectListItem>();
                        SelectListItem itemManha = new SelectListItem()
                        {
                            Value = "1",
                            Text = "Manhã"
                        };
                        SelectListItem itemTarde = new SelectListItem()
                        {
                            Value = "2",
                            Text = "Tarde"
                        };
                        SelectListItem itemNoite = new SelectListItem()
                        {
                            Value = "3",
                            Text = "Noite"
                        };
                        listaHorarios.Add(itemManha);
                        listaHorarios.Add(itemTarde);
                        listaHorarios.Add(itemNoite);
                                            }
                                            @Html.DropDownListFor(m => m.HorarioId, listaHorarios, new { @class = "form-control select2", placeholder = "Selecione o horário da turma", style = "width: 100%;", id = "HorarioTurma" })
                                            @Html.ValidationMessageFor(model => model.HorarioId)
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Filtrar</button>
                                    </div>
                                </div><!-- /.modal-content -->
                            </div>
                        </form>
                   
                    }
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
    </div><!-- /.example-modal -->
    </section><!-- /.content -->
    </div><!-- /.content-wrapper -->