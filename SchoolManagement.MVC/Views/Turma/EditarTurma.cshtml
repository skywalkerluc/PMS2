@model SchoolManagement.MVC.ViewModels.TurmaViewModel

@{
    ViewBag.Title = "Editar - Turma";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Turma
            <small>Editar Turma</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Turma</li>
            <li class="active">Editar Turma</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                    </div><!-- /.box-header -->
                    @using (Html.BeginForm())
                    {
                        <div class="box-body">


                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-horizontal">
                                    @Html.LabelFor(m => m.HorariosTurmaId, htmlAttributes: new { @class = "control-label col-md-2" }) 
                                    @{
                                        List<SelectListItem> listaHorarios = new List<SelectListItem>();
                                        SelectListItem itemVazio = new SelectListItem()
                                        {
                                            Value = "0",
                                            Text = ""
                                        };
                                        SelectListItem itemManha = new SelectListItem()
                                        {
                                            Value = "1",
                                            Text = "Manhã"
                                        };
                                        SelectListItem itemTarde = new SelectListItem()
                                        {
                                            Value = "2",
                                            Text = "Tarde"
                                        };
                                        SelectListItem itemNoite = new SelectListItem()
                                        {
                                            Value = "3",
                                            Text = "Noite"
                                        };
                                        listaHorarios.Add(itemVazio);
                                        listaHorarios.Add(itemManha);
                                        listaHorarios.Add(itemTarde);
                                        listaHorarios.Add(itemNoite);
                                    }
                                    @Html.DropDownListFor(m => m.HorariosTurmaId, listaHorarios, new { @class = "form-control", placeholder = "Selecione o horário da turma", style = "width: 100%;", id = "HorarioTurma" })
                                    @Html.ValidationMessageFor(model => model.HorariosTurmaId)
                                </div>

                                @Html.HiddenFor(m => m.TurmaId);

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Vagas, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Vagas, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Vagas, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>

                            <div>
                                @Html.ActionLink("Voltar", "ResultadoConsultaTurma")
                            </div>
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" value="Save" class="btn btn-primary">Salvar</button>
                        </div>
                    }

                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->