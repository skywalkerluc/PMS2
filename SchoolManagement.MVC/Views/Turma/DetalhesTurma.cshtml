@model SchoolManagement.MVC.ViewModels.TurmaViewModel

@{
    ViewBag.Title = "Detalhes - Turma";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Turma
            <small>Detalhes Turma</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Turma</li>
            <li class="active">Detalhes Turma</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-header with-border">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div>
                            <h4>Turma</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Descricao)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.HorariosTurmaId)
                                </dt>

                                <dd>
                                    @Html.DisplayName(RecuperarValorHorarioTurma(Model.HorariosTurmaId))
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Vagas)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Vagas)
                                </dd>


                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.TurmaId }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>
                    </div><!-- /.box-body -->
                </div>
            </div><!--/.col (left) -->
            <!-- right column -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

@functions{
    public string RecuperarValorHorarioTurma(int value)
    {
        string descricaoRetorno = string.Empty;
        switch (value)
        {
            case 1:
                descricaoRetorno = "Manhã";
                break;
            case 2:
                descricaoRetorno = "Tarde";
                break;
            case 3:
                descricaoRetorno = "Noite";
                break;
            default:
                descricaoRetorno = string.Empty;
                break;
        }
        return descricaoRetorno;
    }
}
